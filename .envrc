# Load Nix environment with direnv
# Install direnv: https://direnv.net/docs/installation.html
# Then run: direnv allow

use flake

# YouGile API Configuration
# Set your API credentials here or in .env.local
if [ -f .env.local ]; then
  dotenv .env.local
fi

# Default values if not set
export YOUGILE_API_URL=${YOUGILE_API_URL:-https://assets.kexan.online}
export RUST_LOG=${RUST_LOG:-debug}

echo "âœ“ Environment loaded"
echo "API URL: $YOUGILE_API_URL"
echo "Log Level: $RUST_LOG"
echo ""
echo "Don't forget to set YOUGILE_API_TOKEN environment variable:"
echo "  export YOUGILE_API_TOKEN=your_token_here"
